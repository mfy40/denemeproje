@model kutuphane.ViewModels.BookShelf


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ekle</title>
</head>
<body>


    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Book" asp-action="Index">Kitaplık Ekle</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>
    </nav>


    <div>


        <form class="needs-validation" method="post" action="EditBookshelf" , role="form" novalidate>


            <div hidden="hidden" class="col-md-4 mb-3">

                @Html.TextBoxFor(m => m.Id, new { @id = "validationCustom01", @class = "form-control" })

            </div>


            <div class="col-md-4 mb-3">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend"></span>
                    </div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })
                    <div class="invalid-tooltip">
                        Kitaplık ismi giriniz !
                    </div>
                </div>
            </div>


            <div class="col-md-4 mb-3">
                @Html.LabelFor(m => m.SelectSalonId, new { @class = "control-label" })
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend"></span>
                    </div>
                    @Html.DropDownListFor(m => m.SelectSalonId, (List<SelectListItem>)ViewBag.saloons, "Seçiniz", new { @class = "form-control", @required = "required" })
                    <div class="invalid-tooltip"><span>Salon seciniz !</span></div>
                </div>
            </div>


            <button class="btn btn-primary" type="submit">Kaydet</button>

        </form>




    </div>



</body>
</html>


<script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
</script>
